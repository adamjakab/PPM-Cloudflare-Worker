{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "jsRules": {},
  "rules": {
    "object-literal-sort-keys": false,
    "object-literal-shorthand": [
      true,
      "never"
    ],
    "ordered-imports": false,
    /*
    "prettier": [
      true,
      {
        "singleQuote": false,
        "trailingComma": "all"
      }
    ],*/
    "quotemark": [
      true,
      "double"
    ],
    "interface-name": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ]
  }
}
